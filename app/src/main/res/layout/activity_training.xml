<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/photo72ppi" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="Week 1"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="60px" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 2"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 3"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek4"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 4"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek5"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:text="Week 5"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="60px" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek6"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 6"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek7"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 7"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnWeek8"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:text="Week 8"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="60px"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
